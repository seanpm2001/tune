{
  "type": "object",
  "title": "Space",
  "additionalProperties": true,
  "required": ["name", "description"],
  "properties": {
    "name": {
      "type": "string",
      "title": "Name",
      "minLength": 1,
      "examples": ["Space name"]
    },
    "description": {
      "type": "string",
      "format": "long",
      "title": "About",
      "description": "A short description of your space.",
      "examples": ["Space description"],
      "minLength": 1
    },
    "externalUrl": {
      "type": "array",
      "title": "Website",
      "examples": ["Website URL"],
      "items": {
        "type": "string",
        "anyOf": [
          {
            "const": "AND",
            "title": "Require all stamps"
          },
          {
            "const": "OR",
            "title": "Require at least one stamp"
          }
        ]
      }
    },
    "github": {
      "type": "number",
      "title": "GitHubID",
      "examples": ["GitHub handle"]
    },
    "twitter": {
      "type": "string",
      "title": "Twitter",
      "examples": ["Twitter handle"]
    },
    "private": {
      "type": "boolean",
      "title": "private",
      "description": "Set profile to private.",
      "examples": ["Discord handle"]
    },
    "operator": {
      "type": "string",
      "title": "Approval operator",
      "description": "Control how many or which stamps are required to vote.",
      "anyOf": [
        {
          "const": "AND",
          "title": "Require all stamps"
        },
        {
          "const": "OR",
          "title": "Require at least one stamp"
        }
      ]
    }
  }
}
